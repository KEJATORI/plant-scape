<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="style.css">
</head>

<body>

  <div class="wrapper">
    <main>
      <div class="header">
        <div>
          <h2>PLANTSCAPE</h2>
        </div>
        <div class="welcome">
          <img src="https://picsum.photos/200" alt="">
          <h4>Welcome Back Gardener!</h4>
        </div>
      </div>

      <div class="container status">
        <div class="title">
          <span class="online"></span>
          <h2>Plant Status</h2>
        </div>
        <div class="content">
          <div class="values">
            <h1><span id="temperature">0</span>°C</h1>
            <h3>Temperature</h3>
          </div>
          <div class="values">
            <h1><span id="humidity">0</span>%</h1>
            <h3>Humidity</h3>
          </div>
          <div class="values">
            <h1><span id="heatIndex">0</span>°C</h1>
            <h3>Heat Index</h3>
          </div>
          <div class="values">
            <h1><span  id="soilMoisture">0</span>%</h1>
            <h3>Soil Moisture</h3>
          </div>
        </div>
      </div>

      <div class="container settings">
        <div class="title">
          <h2>Device Settings</h2>
        </div>
        <div class="content">
          <div class="values">
            <h1><span id="soilMoistureThreshold">0</span>%</h1>
            <h3>Soil Moisture Threshold</h3>
          </div>
          <div class="values">
            <h1><span id="isAutoWater">False</span></h1>
            <h3>Auto Water</h3>
          </div>
          <div class="values">
            <h1><span id="isCover">False</span></h1>
            <h3>Covered</h3>
          </div>
          <div class="values">
            <h1><span id="isWater">False</span></h1>
            <h3>Watering</h3>
          </div>
        </div>
      </div>

      <div class="container controls">
        <div class="title">
          <h2>Controls</h2>
        </div>

        <div class="control">
          <h4>Enable Shed</h4>
          <label class="switch">
            <input id="cover" type="checkbox">
            <span class="slider"></span>
          </label>
        </div>
        <div class="control">
          <h4>Auto Water</h4>
          <label class="switch">
            <input id="autoWater" type="checkbox" value="">
            <span class="slider"></span>
          </label>
        </div>
        <div class="control">
          <h4>Threshold</h4>
          <button id="thresholdSub">-</button>
          <button id="thresholdAdd">+</button>
        </div>
        <div class="control">
          <button id="water">Water</button>
        </div>

      </div>

    </main>
  </div>

  <script src="script.js"></script>
</body>

</html>